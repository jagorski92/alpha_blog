<%= render 'articles/shared/errors', obj: @user %>

<div class='row'>
    <div class='col-xs-12'>
        <!-- Username -->
        <%= form_for(@user, :html => {class: "form-horizontal", roll: "form" }) do |f| %>
            <div class="form-group">
            <div class="control-label col-sm-2">
                    <%= f.label :username %>
            </div>
                <div class="col-sm-8">
                <%= f.text_field :username, class:"form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>
            
            <!-- Email -->
            <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :email %>
            </div>
            <div class="control-label col-sm-8">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %> 
            </div>
            </div>
            
            <!-- Password -->
            <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :password %>
            </div>
            <div class="control-label col-sm-8">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %> 
            </div>
            </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class:'btn btn-primary btn-lg') %>
                <%= link_to "Cancel Sign Up", articles_path, class:"btn btn-warning btn-lg" %>
            </div> <!-- col-sm-offset-5 -->
        </div> <!-- form group -->
            <% end %>
    </div> <!-- col-xs-12 -->
</div> <!-- row -->