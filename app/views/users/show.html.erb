<h1 align:"center">Welcome, <%= @user.username %>!</h1>
<p>ID: <%=@user.id %></p>
<p><%=@user.email %></p>
<p><%=@user.password %></p>

<!--Profile Image -->
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 120 %>
    </div>
</div>

<h4 align="center"><%= @user.username %>'s articles:</h4>

<%= render 'articles/article', obj: @user.articles %>