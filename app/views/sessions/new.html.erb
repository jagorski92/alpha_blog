<h1 align="center">Log In</h1>

<%= form_for(:sessions, :html => {class: "form-horizontal", roll: "form" }, url: login_path) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
                <%= f.label :email %>
        </div>
        <div class="col-sm-8">
            <%= f.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true %>
        </div>
        </div>
            
<!-- Email -->
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :password %>
        </div>
        <div class="control-label col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %> 
        </div>
    </div>
            
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit"Log in", class:'btn btn-primary btn-lg' %>
            <%= link_to "Cancel Log in", root_path, class:"btn btn-warning btn-lg" %>
        </div> <!-- col-sm-offset-5 -->
    </div> <!-- form group -->
    <% end %>
 